<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_marginBottom="10px">
            </SearchView>
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="383dp"
                android:layout_height="80dp"

                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="74dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/sun"
                    android:scaleType="center"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="长春 晴 7-22°C"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    />

                <ImageView
                    android:id="@+id/jdxhview"
                    android:layout_width="70dp"
                    android:layout_height="73dp"
                    android:layout_marginLeft="80dp"
                    android:src="@drawable/jdxhh"
                    />
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="360dp"
                android:layout_height="120dp"
                android:background="@drawable/ybshape3"
                app:cardBackgroundColor="#FFFACD"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_marginBottom="10px"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:src="@drawable/touxiang" />

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="您好！于文文"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"

                            android:text="校园通卡号：541300" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/erweima"
                            android:scaleType="centerInside"
                            android:layout_marginLeft="5px"
                            android:layout_marginRight="5px"
                            android:layout_marginTop="20px"
                            android:layout_marginBottom="5px"/>

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="已完成实名认证" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/baidumap"

                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="	#FFFFFF"

                        android:scaleType="centerInside"
                        android:src="@drawable/xiaoyuandaohang" />
                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="90dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="校园导航"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"

                        android:scaleType="centerInside"
                        android:background="	#FFFFFF"
                        app:srcCompat="@drawable/menjin"
                        />
                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="90dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="门禁认证"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/recharge"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"

                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/chongzhi" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="90dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="银行卡充值" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageButton
                        android:id="@+id/mycards"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"

                        android:background="	#FFFFFF"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/wodekabao" />
                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="90dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="我的卡包"
                        />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"

                        android:scaleType="centerInside"
                        android:background="	#FFFFFF"
                        app:srcCompat="@drawable/kongjiaoshi" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="90dp"
                        android:layout_height="24dp"

                        android:gravity="center"
                        android:text="空教室查询" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/borrowbook"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="	#FFFFFF"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/tushuguan" />
                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="90dp"
                        android:layout_height="24dp"

                        android:gravity="center"
                        android:text="图书馆借阅"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/imageButton7"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:background="	#FFFFFF"
                        app:srcCompat="@drawable/tianjiagengduo"
                        />
                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="90dp"
                        android:layout_height="24dp"

                        android:gravity="center"
                        android:text="添加更多"
                        />

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生活服务"
                    android:textColor="#FF0000"
                    android:layout_weight="4"
                    android:layout_marginLeft="10px"
                    />
                <Button
                    android:gravity="center"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="#FF0000"
                    android:background="#00000000"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/recharge2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blackbiankuang"
                    android:text="充值"
                    android:layout_marginRight="5px"/>

                <Button
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blackbiankuang"
                    android:text="缴费"
                    android:layout_marginRight="5px"/>

                <Button
                    android:id="@+id/mycards2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blackbiankuang"
                    android:text="卡包"
                    android:layout_marginRight="5px"/>
                <Button
                    android:id="@+id/baoxiu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报修"
                    android:background="@drawable/blackbiankuang"
                    android:layout_marginRight="5px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图书馆"
                    android:textColor="#FF0000"
                    android:layout_weight="4"
                    android:layout_marginLeft="10px"
                    />
                <Button
                    android:gravity="center"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="#FF0000"
                    android:background="#00000000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/searchbook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blackbiankuang"
                    android:text="查询图书"
                    android:layout_marginRight="5px"/>

                <Button
                    android:id="@+id/borrowbook2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5px"
                    android:background="@drawable/blackbiankuang"
                    android:text="借阅图书" />
                <Button
                    android:id="@+id/kongweichaxun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空位查询"
                    android:background="@drawable/blackbiankuang"
                    android:layout_marginRight="5px"/>
                <Button
                    android:id="@+id/zixunfuwu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咨询服务"
                    android:background="@drawable/blackbiankuang"
                    android:layout_marginRight="5px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网络中心"
                    android:textColor="#FF0000"
                    android:layout_weight="4"
                    android:layout_marginLeft="10px"
                    />
                <Button
                    android:gravity="center"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="#FF0000"
                    android:background="#FFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/netpayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="网络缴费"
                    android:background="@drawable/blackbiankuang"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/IPchaxun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="IP地址申请与查询"
                    android:background="@drawable/blackbiankuang"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/zhinan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="校园卡开通及其他功能指南"

                    android:background="@drawable/blackbiankuang"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教学管理"
                    android:textColor="#FF0000"
                    android:layout_weight="4"
                    android:layout_marginLeft="10px"
                    />
                <Button
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="#FF0000"
                    android:background="#FFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/timetable"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blackbiankuang"
                    android:text="课表查询" />

                <Button
                    android:id="@+id/kaoqinqiandao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blackbiankuang"
                    android:layout_weight="1"
                    android:text="考勤签到" />

                <Button
                    android:id="@+id/kongjiaoshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blackbiankuang"
                    android:layout_weight="1"
                    android:text="空教室查询" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/qingjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="请假申请"
                    android:background="@drawable/blackbiankuang"/>
                <Button
                    android:id="@+id/gongzichaxun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="工资查询"
                    android:background="@drawable/blackbiankuang"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教务管理"
                    android:textColor="#FF0000"
                    android:layout_weight="4"
                    android:layout_marginLeft="10px"
                    />
                <Button
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="#FF0000"
                    android:background="#FFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/shitangxiaofei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="食堂消费情况"
                    android:background="@drawable/blackbiankuang"/>
                <Button
                    android:id="@+id/jiaoshishangkepingjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="教室上课评价"
                    android:background="@drawable/blackbiankuang"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="50px">

                <Button
                    android:id="@+id/xueshengfenbu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/blackbiankuang"
                    android:layout_weight="1"
                    android:text="学生分布情况" />

                <Button
                    android:id="@+id/yingjichuli"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/blackbiankuang"
                    android:text="应急处理" />
            </LinearLayout>





        </LinearLayout>
    </ScrollView>


</LinearLayout>