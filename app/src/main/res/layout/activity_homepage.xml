<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ScrollView
        android:layout_width="422dp"
        android:layout_height="555dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <SearchView
                android:layout_width="406dp"
                android:layout_height="44dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="4dp">

            </SearchView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="56dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sun"
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="61dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="长春 晴 7-22°C"
                    android:textSize="30dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="70dp" />

                <ImageView
                    android:id="@+id/jdxhview"
                    android:layout_width="75dp"
                    android:layout_height="73dp"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:src="@drawable/jdxhh"
                    tools:layout_editor_absoluteX="192dp"
                    tools:layout_editor_absoluteY="48dp" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="410dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"

                app:cardBackgroundColor="#FFDEAD"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="129dp"


                >

                <LinearLayout
                    android:layout_width="412dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"

                        android:src="@drawable/boytouxiang" />

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="您好！小明"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"

                            android:text="校园通卡号：XXXXXX" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"

                            android:src="@drawable/erweima" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="已完成实名认证" />


                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="193dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="270dp">

                <ImageButton
                    android:layout_width="70dp"

                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/xiaoyuandaohang"
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="0dp" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/menjin"
                    tools:layout_editor_absoluteX="106dp"
                    tools:layout_editor_absoluteY="0dp" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/chongzhi"
                    tools:layout_editor_absoluteX="209dp"
                    tools:layout_editor_absoluteY="0dp" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/wodekabao"
                    tools:layout_editor_absoluteX="306dp"
                    tools:layout_editor_absoluteY="0dp" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/kongjiaoshi"
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="98dp" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/tushuguan"
                    tools:layout_editor_absoluteX="106dp"
                    tools:layout_editor_absoluteY="98dp" />

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/tianjiagengduo"
                    tools:layout_editor_absoluteX="209dp"
                    tools:layout_editor_absoluteY="98dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="70dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="校园导航"
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="70dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="70dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="门禁认证"
                    tools:layout_editor_absoluteX="106dp"
                    tools:layout_editor_absoluteY="70dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="70dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="充值缴费"
                    tools:layout_editor_absoluteX="209dp"
                    tools:layout_editor_absoluteY="70dp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="70dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="我的卡包"
                    tools:layout_editor_absoluteX="306dp"
                    tools:layout_editor_absoluteY="70dp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="70dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="空教室查询"
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="168dp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="70dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="图书馆借阅"
                    tools:layout_editor_absoluteX="106dp"
                    tools:layout_editor_absoluteY="168dp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="70dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="添加更多"
                    tools:layout_editor_absoluteX="209dp"
                    tools:layout_editor_absoluteY="168dp" />


            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
